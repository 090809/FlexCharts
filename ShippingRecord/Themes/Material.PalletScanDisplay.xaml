<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ShippingRecord.Controls">
	<Style TargetType="controls:PalletScanDisplay">
		<Setter Property="Height" Value="40"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="controls:PalletScanDisplay">
					<Border>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="{TemplateBinding ActualHeight}"/>
								<ColumnDefinition Width="2*"/>
								<ColumnDefinition Width="1*"/>
							</Grid.ColumnDefinitions>
							<Viewbox Name="PART_steamlinklogo">
								<Path Style="{StaticResource drawablecrop_landscape}" Fill="{Binding Path=(ThemePrimitive.Theme).P700}"/>
							</Viewbox>
							<Viewbox Name="PART_controllericon">
								<Path Style="{StaticResource drawablexbox_controller}" Fill="{Binding Path=(ThemePrimitive.Theme).P700}"/>
							</Viewbox>
							<Label Grid.Column="1" Content="{Binding UPC, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource t14pButton}"  Foreground="Black"/>
							<Label Grid.Column="2" Content="{Binding Serial, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource t14pButton}" Foreground="Black"/>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>