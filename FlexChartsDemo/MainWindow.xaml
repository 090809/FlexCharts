<Window x:Class="FlexChartsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fc="http://www.flexcharts.com/schemas/core"
        mc:Ignorable="d"
				TextOptions.TextFormattingMode="Ideal"
				TextOptions.TextRenderingMode="Aliased"
        Title="MainWindow" Height="800" Width="1300">
  <Window.Resources>
    <Style x:Key="darkbase" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource Text22p}">
      <Setter Property="Padding" Value="15"/>
      <Setter Property="SegmentForeground" Value="P600"/>
      <Setter Property="Foreground" Value="{StaticResource mtGrey200}"/>
      <Setter Property="FontWeight" Value="Light"/>
    </Style>
    <Style x:Key="darkpareto" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource darkbase}">

      <Setter Property="fc:SegmentPrimative.SegmentSpaceBackground" Value="->White000,0.03"/>
      <Setter Property="fc:SegmentPrimative.SegmentWidthPercentage" Value=".7"/>
      <Setter Property="fc:XAxisPrimative.XAxisForeground" Value="P400"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontSize" Value="11pt"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontStyle" Value="Italic"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontWeight" Value="Light"/>
      <Setter Property="fc:ValuePrimative.ValueForeground" Value="P400"/>
      <Setter Property="fc:ValuePrimative.ValueFontSize" Value="16"/>
      <Setter Property="fc:DotPrimative.DotStroke" Value="->Grey400"/>
      <Setter Property="fc:DotPrimative.DotStrokeThickness" Value="2"/>
      <Setter Property="fc:DotPrimative.DotFill" Value="P500"/>
      <Setter Property="fc:DotPrimative.DotRadius" Value="6"/>
      <Setter Property="fc:LinePrimative.LineStroke" Value="P400"/>
      <Setter Property="fc:LinePrimative.LineStrokeThickness" Value="2"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalFontSize" Value="10pt"/>

    </Style>
    <Style x:Key="darkring" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource darkbase}">
      <Setter Property="fc:SegmentPrimative.SegmentSpaceBackground" Value="->White000,0.03"/>
      <Setter Property="fc:SegmentPrimative.SegmentWidthPercentage" Value=".7"/>
      <Setter Property="fc:ValuePrimative.ValueForeground" Value="->White000"/>
      <Setter Property="fc:ValuePrimative.ValueFontSize" Value="11pt"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalForeground" Value="P500"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalFontSize" Value="14pt"/>
      <Setter Property="fc:ValuePrimative.ValueFontStyle" Value="Italic"/>
      <Setter Property="fc:ValuePrimative.ValueFontWeight" Value="Light"/>
      <Setter Property="fc:SecondaryValuePrimative.SecondaryValueForeground" Value="P100"/>
      <Setter Property="fc:SecondaryValuePrimative.SecondaryValueFontSize" Value="32pt"/>
      <Setter Property="fc:RingPrimative.RingWidth" Value="30"/>

    </Style>
    <Style x:Key="darkpie" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource darkbase}">
      <Setter Property="fc:BarTotalPrimative.BarTotalForeground" Value="P500"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalFontSize" Value="14pt"/>
      <Setter Property="fc:ValuePrimative.ValueForeground" Value="->White000"/>
      <Setter Property="fc:ValuePrimative.ValueFontSize" Value="11pt"/>
      <Setter Property="fc:ValuePrimative.ValueFontStyle" Value="Italic"/>
      <Setter Property="fc:ValuePrimative.ValueFontWeight" Value="Light"/>
    </Style>
    <Style x:Key="darkstackedbar" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource darkbase}">
      <Setter Property="fc:XAxisPrimative.XAxisForeground" Value="P200"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontSize" Value="11pt"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontStyle" Value="Italic"/>
      <Setter Property="fc:XAxisPrimative.XAxisFontWeight" Value="Light"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalForeground" Value="P300"/>
      <Setter Property="fc:BarTotalPrimative.BarTotalFontSize" Value="11pt"/>
      <Setter Property="fc:SegmentPrimative.SegmentSpaceBackground" Value="->White000,.05"/>
    </Style>
  </Window.Resources>

