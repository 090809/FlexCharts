<Window x:Class="FlexChartsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fc="http://www.flexcharts.com/schemas/core"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns:core="clr-namespace:FlexCharts.Controls.Core;assembly=FlexCharts"
        xmlns:charts="clr-namespace:FlexCharts.Controls.Charts;assembly=FlexCharts"
        mc:Ignorable="d"
				TextOptions.TextFormattingMode="Ideal"
				TextOptions.TextRenderingMode="Aliased"
        Title="MainWindow" Height="800" Width="1800">
    <Window.Resources>
        <Style x:Key="DarkFlexChart" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource Text22p}">
            <Setter Property="Padding" Value="15"/>
            <Setter Property="SegmentForeground" Value="P600"/>
            <Setter Property="Foreground" Value="{StaticResource mtGrey200}"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="MaterialProvider" Value="{x:Static fc:GradientMaterialProvider.CoolColors}"/>

            <Setter Property="fc:DotPrimitive.DotStroke" Value="->Grey400"/>
            <Setter Property="fc:DotPrimitive.DotStrokeThickness" Value="2"/>
            <Setter Property="fc:DotPrimitive.DotFill" Value="P500"/>
            <Setter Property="fc:DotPrimitive.DotRadius" Value="5"/>

            <Setter Property="fc:LinePrimitive.LineStroke" Value="P400"/>
            <Setter Property="fc:LinePrimitive.LineStrokeThickness" Value="2"/>

            <Setter Property="fc:XAxisPrimitive.XAxisForeground" Value="P400"/>
            <Setter Property="fc:XAxisPrimitive.XAxisFontSize" Value="11pt"/>
            <Setter Property="fc:XAxisPrimitive.XAxisFontStyle" Value="Italic"/>
            <Setter Property="fc:XAxisPrimitive.XAxisFontWeight" Value="Light"/>

            <Setter Property="fc:ValuePrimitive.ValueForeground" Value="->White000"/>
            <Setter Property="fc:ValuePrimitive.ValueFontSize" Value="11pt"/>
            <Setter Property="fc:ValuePrimitive.ValueFontStyle" Value="Italic"/>
            <Setter Property="fc:ValuePrimitive.ValueFontWeight" Value="Light"/>

            <Setter Property="fc:SegmentPrimitive.SegmentSpaceBackground" Value="->White000,0.03"/>
            <Setter Property="fc:SegmentPrimitive.SegmentWidthPercentage" Value=".6"/>

            <Setter Property="fc:BarTotalPrimitive.BarTotalForeground" Value="P600"/>
            <Setter Property="fc:BarTotalPrimitive.BarTotalFontSize" Value="14pt"/>


        </Style>
        <Style x:Key="darkpareto" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource DarkFlexChart}">
            <Setter Property="fc:BarTotalPrimitive.BarTotalFontSize" Value="10pt"/>
        </Style>
        <Style x:Key="darkring" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource DarkFlexChart}">
            <Setter Property="fc:SegmentPrimitive.SegmentWidthPercentage" Value=".7"/>
            <Setter Property="fc:BarTotalPrimitive.BarTotalForeground" Value="P500"/>
            <Setter Property="fc:SecondaryValuePrimitive.SecondaryValueForeground" Value="P100"/>
            <Setter Property="fc:SecondaryValuePrimitive.SecondaryValueFontSize" Value="32pt"/>
            <Setter Property="fc:RingPrimitive.RingWidthPercentage" Value=".3"/>
            <Setter Property="fc:PolarLabelingPrimitive.OuterLabelPositionScale" Value="1.2"/>

        </Style>
        <Style x:Key="darkpie" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource DarkFlexChart}">


        </Style>
        <Style x:Key="darkstackedbar" TargetType="fc:AbstractFlexChart" BasedOn="{StaticResource DarkFlexChart}">
            <Setter Property="fc:XAxisPrimitive.XAxisForeground" Value="P200"/>
            <Setter Property="fc:BarTotalPrimitive.BarTotalForeground" Value="P300"/>
            <Setter Property="fc:BarTotalPrimitive.BarTotalFontSize" Value="11pt"/>
            <Setter Property="fc:SegmentPrimitive.SegmentSpaceBackground" Value="->White000,.05"/>
            <Setter Property="MaterialProvider" Value="{x:Static fc:SequentialMaterialProvider.CoolColors}"/>
        </Style>
        <Style x:Key="darknestedarc" TargetType="charts:NestedArcChart" BasedOn="{StaticResource DarkFlexChart}">
            <Setter Property="SecondaryValueForeground" Value="->Grey500"/>
            <Setter Property="ValueForeground" Value="P400"/>
        </Style>
        <Style x:Key="darkhorizontalbarchart" TargetType="charts:HorizontalBarChart" BasedOn="{StaticResource DarkFlexChart}">
            <Setter Property="BarTotalFontSize" Value="12pt"/>
            <Setter Property="YAxisFontStyle" Value="Italic"/>
        </Style>

    </Window.Resources>

