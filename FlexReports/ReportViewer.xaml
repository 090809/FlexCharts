<m:MaterialShell x:Class="FlexReports.ReportViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:FlexReports.MaterialControls"
        xmlns:materialDesign="http://www.flexcharts.com/schemas/core"
        mc:Ignorable="d"
				d:DataContext="{d:DesignInstance m:MaterialShell, IsDesignTimeCreatable=True}"
				Style="{StaticResource MaterialShell}"
																
        Title="Report Viewer" Height="600" Width="800">
  <m:MaterialShell.Resources>

  </m:MaterialShell.Resources>
  <Grid>
    <DockPanel>
      <DockPanel Name="LeftMenu" DockPanel.Dock="Left" Background="{StaticResource mtGrey100}" 
									Width="65">
        <Grid DockPanel.Dock="Top" Height="64" Background="{Binding Path=(m:ThemePrimitive.Theme).P500}" TextElement.Foreground="{StaticResource mtGrey50}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="64"/>
          </Grid.ColumnDefinitions>
          <Grid Name="LeftTitleBar">
            <Label Content="Open Report" Style="{StaticResource t15pSubhead}" Padding="30 0" HorizontalAlignment="Left"/>
            <Path Style="{StaticResource drawablesort_by_alpha}" HorizontalAlignment="Right"/>
          </Grid>
          <Border Grid.Column="1">
            <ToggleButton Style="{StaticResource MaterialMenuArrowToggleButton}" Margin="0 0" 
											HorizontalAlignment="Center" Checked="MenuExpand" Unchecked="MenuCollapse"/>
          </Border>
        </Grid>
        <Grid DockPanel.Dock="Bottom">
          <StackPanel Orientation="Vertical" Name="LeftPanelItems" Opacity="1">
            <Border Height="80" BorderBrush="{StaticResource mtGrey800}" BorderThickness="0 0 0 1">
              <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                  <Grid Width="80" HorizontalAlignment="Left">
                    <Ellipse Margin="15" Width="50" Height="50" Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}"/>
                    <Label Content="M"/>
                  </Grid>
                  <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Label Content="Monday, August 31 2015" Foreground="{StaticResource mtGrey400}" 
										 Style="{StaticResource t13pBody1}" Padding="0" HorizontalContentAlignment="Left"/>
                    <Label Content="More information" Foreground="{StaticResource mtGrey600}" FontStyle="Italic" FontWeight="Light"
										 Style="{StaticResource t12pCaption}" Padding="0" HorizontalContentAlignment="Left"/>
                  </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="0 0 15 0"  VerticalAlignment="Center">
                  <Label Content="12:10P" Foreground="{StaticResource mtGrey600}" 
										 Style="{StaticResource t12pCaption}" FontSize="10pt"  Padding="0 0 0 5" HorizontalContentAlignment="Right"/>
                  <Ellipse  Width="13" Height="13" Margin="0 0 10 0"  Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}" HorizontalAlignment="Right "/>
                </StackPanel>
              </DockPanel>
            </Border>
            <Border Height="80" BorderBrush="{StaticResource mtGrey800}" BorderThickness="0 0 0 1">
              <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                  <Grid Width="80" HorizontalAlignment="Left">
                    <Ellipse Margin="15" Width="50" Height="50" Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}"/>
                    <Label Content="M"/>
                  </Grid>
                  <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Label Content="Monday, August 31 2015" Foreground="{StaticResource mtGrey400}" 
										 Style="{StaticResource t13pBody1}" Padding="0" HorizontalContentAlignment="Left"/>
                    <Label Content="More information" Foreground="{StaticResource mtGrey600}" FontStyle="Italic" FontWeight="Light"
										 Style="{StaticResource t12pCaption}" Padding="0" HorizontalContentAlignment="Left"/>
                  </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="0 0 15 0"  VerticalAlignment="Center">
                  <Label Content="12:10P" Foreground="{StaticResource mtGrey600}" 
										 Style="{StaticResource t12pCaption}" FontSize="10pt"  Padding="0 0 0 5" HorizontalContentAlignment="Right"/>
                  <Ellipse  Width="13" Height="13" Margin="0 0 10 0"  Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}" HorizontalAlignment="Right "/>
                </StackPanel>
              </DockPanel>
            </Border>
            <Border Height="80" BorderBrush="{StaticResource mtGrey800}" BorderThickness="0 0 0 1">
              <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                  <Grid Width="80" HorizontalAlignment="Left">
                    <Ellipse Margin="15" Width="50" Height="50" Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}"/>
                    <Label Content="M"/>
                  </Grid>
                  <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Label Content="Monday, August 31 2015" Foreground="{StaticResource mtGrey400}" 
										 Style="{StaticResource t13pBody1}" Padding="0" HorizontalContentAlignment="Left"/>
                    <Label Content="More information" Foreground="{StaticResource mtGrey600}" FontStyle="Italic" FontWeight="Light"
										 Style="{StaticResource t12pCaption}" Padding="0" HorizontalContentAlignment="Left"/>
                  </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="0 0 15 0"  VerticalAlignment="Center">
                  <Label Content="12:10P" Foreground="{StaticResource mtGrey600}" 
										 Style="{StaticResource t12pCaption}" FontSize="10pt"  Padding="0 0 0 5" HorizontalContentAlignment="Right"/>
                  <Ellipse  Width="13" Height="13" Margin="0 0 10 0"  Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}" HorizontalAlignment="Right "/>
                </StackPanel>
              </DockPanel>
            </Border>
            <Border Height="80" BorderBrush="{StaticResource mtGrey800}" BorderThickness="0 0 0 1">
              <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                  <Grid Width="80" HorizontalAlignment="Left">
                    <Ellipse Margin="15" Width="50" Height="50" Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}"/>
                    <Label Content="M"/>
                  </Grid>
                  <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Label Content="Monday, August 31 2015" Foreground="{StaticResource mtGrey400}" 
										 Style="{StaticResource t13pBody1}" Padding="0" HorizontalContentAlignment="Left"/>
                    <Label Content="More information" Foreground="{StaticResource mtGrey600}" FontStyle="Italic" FontWeight="Light"
										 Style="{StaticResource t12pCaption}" Padding="0" HorizontalContentAlignment="Left"/>
                  </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="0 0 15 0"  VerticalAlignment="Center">
                  <Label Content="12:10P" Foreground="{StaticResource mtGrey600}" 
										 Style="{StaticResource t12pCaption}" FontSize="10pt"  Padding="0 0 0 5" HorizontalContentAlignment="Right"/>
                  <Ellipse  Width="13" Height="13" Margin="0 0 10 0"  Fill="{Binding Path=(m:ThemePrimitive.Theme).P500}" HorizontalAlignment="Right "/>
                </StackPanel>
              </DockPanel>
            </Border>
          </StackPanel>
          <StackPanel Orientation="Vertical" Name="LeftIconMenu" HorizontalAlignment="Right" Width="65"
								Background="{StaticResource mtGrey900}">
            <Path Style="{StaticResource drawablefind_in_page}"/>
            <Path Style="{StaticResource drawablecode}"/>
            <Path Style="{StaticResource drawabledashboard}"/>
            <Path Style="{StaticResource drawableview_carousel}"/>
            <Path Style="{StaticResource drawableview_day}"/>
          </StackPanel>
        </Grid>



      </DockPanel>
      <Grid DockPanel.Dock="Right" Background="{StaticResource mtGrey50}">
        <StackPanel Orientation="Vertical">
          <Grid Height="64" Background="{Binding Path=(m:ThemePrimitive.Theme).P500}" TextElement.Foreground="{StaticResource mtGrey50}">

            <Label Content="Report Viewer" Style="{StaticResource t15pSubhead}" HorizontalAlignment="Left"
							 Padding="30 0" />
            <StackPanel Name="AppToolbar" HorizontalAlignment="Right" Orientation="Horizontal">

              <Button Style="{StaticResource PathButton}" m:VisualFeedback.ClickFeedback="P100">
                <Path Style="{StaticResource drawablesearch}"/>
              </Button>
              <Button Style="{StaticResource PathButton}" m:VisualFeedback.ClickFeedback="P200">
                <Path Style="{StaticResource drawableview_module}"/>
              </Button>
              <Button Style="{StaticResource PathButton}" m:VisualFeedback.ClickFeedback="P700" Click="SelectTheme">
                <Path Style="{StaticResource drawablecolor_lens}"/>
              </Button>
              <Button Style="{StaticResource PathButton}" m:VisualFeedback.ClickFeedback="P800">
                <Path Style="{StaticResource drawablemore_vert}"/>
              </Button>
            </StackPanel>
            <!--<TextBox Height="40" Width="300" DockPanel.Dock="Right" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
								 materialControls:TextField.Hint="Search" HorizontalAlignment="Right"/>-->

          </Grid>
        </StackPanel>
        <Border Background="Black" Name="Dimmer" Opacity="0" IsHitTestVisible="False"/>
      </Grid>

    </DockPanel>
    <m:PopupManager x:Name="PopupSpace">


      <!--<m:ThemeSelector Width="300" Height="450" ThemeSelected="themeSelected"/>-->

    </m:PopupManager>
    
  </Grid>



</m:MaterialShell>
