										<Setter Property="Style" Value="{StaticResource drawablefolder}" TargetName="icon"/>
									</Trigger>
									<Trigger Property="data:FileSystemInfoDataSource.IconSelector" Value="File">
										<Setter Property="Style" Value="{StaticResource drawableinsert_drive_file}" TargetName="icon"/>
									</Trigger>
