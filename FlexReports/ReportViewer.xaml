          </ListBox>-->
          <!--<m:FileListItem></m:FileListItem>-->
        </StackPanel>
        <Border Background="Black" Name="Dimmer" Opacity="0" IsHitTestVisible="False"/>
      </Grid>

    </DockPanel>
    <m:PopupManager x:Name="PopupSpace">


      <!--<m:ThemeSelector Width="300" Height="450" ThemeSelected="themeSelected"/>-->

    </m:PopupManager>
  </Grid>
</m:MaterialShell>
