<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fileManager="clr-namespace:Material.Controls.FileManager"
                    xmlns:primitives="clr-namespace:Material.Controls.Primitives">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="Material.Drawables.xaml"/>
		<ResourceDictionary Source="Material.PathButton.xaml"/>
	</ResourceDictionary.MergedDictionaries>
	<Style TargetType="{x:Type fileManager:FileManager}">
		<Setter Property="DataContext" Value="{Binding RelativeSource={RelativeSource Self}}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type fileManager:FileManager}">
					<StackPanel Orientation="Vertical">
						<StackPanel Orientation="Horizontal" Height="50" Background="{Binding Path=(primitives:ThemePrimitive.Theme).P600}">
							<Button Width="50" Style="{StaticResource PathButton}" Name="PART_directoryup">
								<Path Style="{StaticResource drawablereply}" RenderTransformOrigin=".5,.5">
									<Path.RenderTransform>
										<TransformGroup>
											<RotateTransform Angle="90"/>
											<ScaleTransform ScaleX="-1"/>
										</TransformGroup>
									</Path.RenderTransform>
								</Path>
							</Button>
							<!--<Border Width="100" Height="30"  >
					<Grid>
						<Rectangle Stroke="White" StrokeThickness="2" RadiusX="10" RadiusY="10"/>
						<TextBlock Text="test" Foreground="White" FontSize="14pt" HorizontalAlignment="Center" />
						<Button Style="{StaticResource PathButton}" HorizontalAlignment="Right">
							<Path Style="{StaticResource drawablehighlight_off}"/>
						</Button>
					</Grid>
				</Border>-->

						</StackPanel>
						<ScrollViewer>
							<ItemsControl ItemsSource="{Binding FileList}">
								<ItemsControl.ItemsPanel>
									<ItemsPanelTemplate>
										<StackPanel Orientation="Vertical"/>
									</ItemsPanelTemplate>
								</ItemsControl.ItemsPanel>
							</ItemsControl>
						</ScrollViewer>
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>